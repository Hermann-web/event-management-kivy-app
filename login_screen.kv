<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: None, None
        #size: root.width * 0.8, root.height * 0.8
        size: dp(300), dp(400)
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        padding: dp(10)
        spacing: dp(10)
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: 'Login Screen'
            font_size: dp(24)
            color: 1, 1, 1, 1
            size_hint_y: None
            height: dp(50)

        MDTextField:
            id: username_field
            hint_text: "Username"
            size_hint_x: None
            width: dp(200)
            color_active: 1, 1, 1, 1
            line_color_normal: 1, 1, 1, 1
            line_color_focus: 1, 1, 1, 1
            hint_text_color: 1, 1, 1, 0.5

        MDTextField:
            id: password_field
            hint_text: "Password"
            size_hint_x: None
            width: dp(200)
            color_active: 1, 1, 1, 1
            line_color_normal: 1, 1, 1, 1
            line_color_focus: 1, 1, 1, 1
            hint_text_color: 1, 1, 1, 0.5

        MDRaisedButton:
            text: 'Login'
            size_hint_x: None
            width: dp(100)
            on_release:
                root.login(username_field.text, password_field.text)

